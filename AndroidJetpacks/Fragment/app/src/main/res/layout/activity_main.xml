<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_basic_fragment"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="프래그먼트에 대해서 알아보자"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_basic_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본 프래그먼트 호출"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/button_savedInstanceState_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프래그먼트 savedInstanceState 사용 호출"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_basic_fragment"/>

    <Button
        android:id="@+id/button_instance_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프래그먼트 인스턴스 사용 호출"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_savedInstanceState_fragment"/>

    <Button
        android:id="@+id/button_factory_fragment_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프래그먼트 팩토리 ONE 사용 호출"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_instance_fragment"/>

    <Button
        android:id="@+id/button_factory_fragment_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프래그먼트 팩토리 TWO 사용 호출"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_factory_fragment_one"/>
    <Button
        android:id="@+id/button_factory_fragment_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프래그먼트 팩토리 THREE 사용 호출"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_factory_fragment_two"/>



</androidx.constraintlayout.widget.ConstraintLayout>