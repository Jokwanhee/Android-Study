<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/list_view_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/dock"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/list_view_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/list_view_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="text text text text text text text text text text text text text text text text text text "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_view_image"
        app:layout_constraintTop_toBottomOf="@+id/list_view_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>